/**index.wxss**/

.indexcontainer {
  width: 100%;
  display: block;
  height: 100%;
  font-size: 24rpx;
  background: #eee;
}

.banner {
  width: 750rpx;
  height: 420rpx;
}

.banner-item {
  width: 750rpx;
  height: 420rpx;
}

.header {
  height: 35rpx;
  border-left: 8rpx solid #d81e06;
  margin: 8rpx 0 8rpx 10rpx;
  padding-left: 10rpx;
  padding-top: 5rpx;
}

.header text {
  font-size: 30rpx;
}

.menu_container {
  
  
  display: flex;
  padding: 10rpx;
  background-color: #eee;
}

.menu_item_left {
  display: block;
  box-shadow: 2rpx 2rpx 4rpx #999;
  width: 362rpx;
  height: 310rpx;
  background-color: #fff;
}

.menu_item_right {
  box-shadow: 2rpx 2rpx 4rpx #999;
  background-color: #fff;
  width: 362rpx;
  display: block;
  height: 310rpx;
  margin-left: 15rpx;
}

.menu_item_img {
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  width: 345rpx;
  height: 260rpx;
}

.menu_item_text {
  margin-left: 10rpx;
  color: #434343;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.user_list {
  margin: 15rpx 15rpx 30rpx;
  background: #fff;
  box-shadow: 0 0 0 2rpx #f1f1f1;
  opacity: 0.9;
  border-radius: 8rpx;
  color: #a1a1a1;
  font-size: 28rpx;
  padding: 4rpx 20rpx;
}

.user_address {
  line-height: 100rpx;
}

.user_border {
  border-bottom: 1px solid #dcdcdc;
}

.user_comment {
  padding: 20rpx 0;
  color: #1a1a1a;
  font-size: 28rpx;
  display: table;
}

.user_comment_image {
  height: 20rpx;
  width: 20rpx;
  margin-right: 20rpx;
}

.user_service_time {
  line-height: 100rpx;
  text-align: right;
  padding-right: 10rpx;
}

.menu_bg_red1{
  background-color: d81e06;
}
